<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.online.shop.dao.MemberDAO">

<select id="memberInfo" parameterType="MemberVO" resultType="MemberVO">
SELECT * from SMEMBER 
where s_id=#{s_id}
</select>

<select id="join" parameterType="MemberVO" resultType="MemberVO">
INSERT INTO SMEMBER
values(
#{s_id},
#{s_pw},
#{s_name},
#{s_phone},
#{s_email},
0,
0
)
</select>

   <select id="login" parameterType="com.online.shop.vo.MemberVO" resultType="com.online.shop.vo.MemberVO">
      select s_id,s_pw from SMEMBER where s_id = #{s_id} 
   </select>
   <select id="idChk" resultType="int">
    SELECT count(*) from SMEMBER where s_id=#{s_id}
   </select>
   <update id="memberModify">
   update SMEMBER set 
   s_pw=#{s_pw},
   s_name=#{s_name},
   s_phone=#{s_phone},
   s_email=#{s_email}
   where s_id=#{s_id}
   
   </update>
</mapper>